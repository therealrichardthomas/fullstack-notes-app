# .gitignore

# General
# Ignore macOS system files
.DS_Store

# Ignore log files
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*

# Ignore IDE and editor directories
.idea/
.vscode/
*.suo
*.ntvs*
*.njsproj
*.sln
*.sw?

# --- Backend (Node.js) ---

# Ignore Node.js dependency folder
backend/node_modules/

# Ignore environment variables file. This is CRITICAL for security.
# It contains your database connection strings and secrets.
backend/.env

# Ignore test coverage folder
backend/coverage/


# --- Frontend (React / Vite) ---

# Ignore frontend dependency folder
frontend/node_modules/

# Ignore frontend build output folder
frontend/dist/

# Ignore environment variables files for the frontend
frontend/.env
frontend/.env.*

# Ignore test coverage folder for the frontend
frontend/coverage/

# Ignore Vite-specific cache and log files
frontend/.vite/